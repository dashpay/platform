{
  "extends": [
    "airbnb-base",
    "plugin:chai-friendly/recommended"
  ],
  "root": true,
  "env": {
    "node": true,
    "mocha": true
  },
  "overrides": [
    {
      "files": [
        "**/*.ts"
      ],
      "extends": [
        "airbnb-base",
        "airbnb-typescript/base",
        "plugin:chai-friendly/recommended"
      ],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ],
  "ignorePatterns": [
    "build",
    "dist",
    "webpack.*.js"
  ]
}
