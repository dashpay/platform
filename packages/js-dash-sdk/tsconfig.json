{
  "compilerOptions": {
    "//": "ES2017 from es5 is required in order to have usage of super().",
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "outDir": "./build",
    "skipLibCheck": true,
    "strict": true,
    "allowUmdGlobalAccess": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["src"],
  "typeRoots": ["node_modules/@types"]
}
