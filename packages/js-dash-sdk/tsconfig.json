{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "outDir": "./build",
    "strict": true,
    "allowUmdGlobalAccess": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "exclude": ["node_modules", "**/*.test.ts", "examples", "tests", "lib"],
  "typeRoots": ["node_modules/@types", "./typings"]
}
