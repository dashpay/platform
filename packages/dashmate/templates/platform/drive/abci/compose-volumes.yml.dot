version: '3.7'

services:
  drive_abci:
    volumes:
      {{~ Object.entries(it.platform.drive.abci.logs) :logger }}
      {{ [name, settings] = logger; }}
      {{? settings.destination !== 'stderr' && settings.destination !== 'stdout' }}
      - {{=settings.destination}}:/var/log/dash/drive/{{=name}}/{{=settings.destination.split('/').reverse()[0]}}
      {{?}}
      {{~}}
