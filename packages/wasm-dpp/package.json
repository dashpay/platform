  "description": "The JavaScript implementation of the Dash Platform Protocol",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn run build:wasm && yarn run build:js",
    "build:wasm": "yarn exec scripts/build-wasm.sh",
    "build:js": "yarn exec scripts/build-js.sh",
    "test": "yarn run test:node && yarn run test:browsers && yarn run test:types",
    "test:types": "yarn pnpify tsd",
    "test:browsers": "karma start ./karma.conf.js --single-run",
    "test:node": "NODE_ENV=test mocha",
    "tsc": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "yarn exec scripts/clean.sh"
  },
  "ultra": {
    "concurrent": [
      "test",
      "lint"
    ]
  },
