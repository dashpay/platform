{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "../dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": ["./js/src/**/*"],
  "exclude": ["node_modules"]
}

