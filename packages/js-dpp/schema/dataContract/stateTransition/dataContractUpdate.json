{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "protocolVersion": {
      "type": "integer",
      "$comment": "Maximum is the latest protocol version"
    },
    "type": {
      "type": "integer",
      "const": 4
    },
    "dataContract": {
      "type": "object"
    },
    "signaturePublicKeyId": {
      "type": "integer",
      "minimum": 0
    },
    "signature": {
      "type": "array",
      "byteArray": true,
      "minItems": 65,
      "maxItems": 65
    },
    "signatureScript": {
      "type": "array",
      "byteArray": true,
      "minItems": 1,
      "maxItems": 10000
    }
  },
  "anyOf": [
    {
      "type": "object",
      "required": ["signature"],
      "properties": {
        "signature": true
      }
    },
    {
      "type": "object",
      "required": ["signatureScript"],
      "properties": {
        "signatureScript": true
      }
    }
  ],
  "additionalProperties": false,
  "required": [
    "protocolVersion",
    "type",
    "dataContract",
    "signaturePublicKeyId"
  ]
}
